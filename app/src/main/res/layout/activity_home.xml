<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/some_white"
    tools:context="kdas.i_nterface.uitest_2.Home">



    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:id="@+id/home1"
        app:cardElevation="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/home3"
        android:layout_marginTop="60dp" />

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:id="@+id/home2"
        app:cardElevation="10dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/home1" />

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:id="@+id/home3"
        app:cardElevation="10dp"
        android:layout_marginBottom="73dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:elevation="15dp"
            android:src="@drawable/mars1"
            android:layout_marginTop="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView9" />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:elevation="15dp"
            android:src="@drawable/mars2"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/imageView8"
            android:id="@+id/imageView9" />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/mars3"
            android:elevation="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/home3"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="55dp"
            android:id="@+id/imageView8" />


</RelativeLayout>
