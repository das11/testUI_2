<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/some_accent"
    tools:context="kdas.i_nterface.uitest_2.Home">

    <android.support.v7.widget.CardView
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:id="@+id/view10"
        app:cardCornerRadius="8dp"
        app:cardElevation="12dp"
        android:layout_marginTop="75dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/some_teal2"
            android:layout_marginBottom="40dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:src="@drawable/a_11"/>

        </RelativeLayout>

        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:id="@+id/view11"
        app:cardCornerRadius="8dp"
        app:cardElevation="12dp"
        android:layout_alignTop="@id/view10"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="29dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_white"
            android:layout_marginBottom="40dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/a_14"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:id="@+id/view12"
        app:cardCornerRadius="8dp"
        app:cardElevation="12dp"
        android:layout_below="@id/view10"
        android:layout_alignStart="@id/view10"
        android:layout_marginTop="67dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_white"
            android:layout_marginBottom="40dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/a_13"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:id="@+id/view13"
        app:cardCornerRadius="8dp"
        app:cardElevation="12dp"
        android:layout_alignTop="@id/view12"
        android:layout_alignStart="@id/view11">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/some_teal2"
            android:layout_marginBottom="40dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/ping_route"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
