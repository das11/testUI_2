<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:paddingTop="6dp"
    android:paddingBottom="15dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="5dp"
        android:id="@+id/view3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">


            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/pro"
                android:src="@drawable/summer"
                app:civ_border_width="0dp"
                app:civ_border_color="#FFFFFF"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <com.github.pavlospt.CircleView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:id="@+id/cir2"
                app:cv_titleText=""
                app:cv_subtitleText=""
                app:cv_strokeColorValue="@color/some_accent"
                app:cv_fillColor="@color/yellow"
                android:layout_marginTop="43dp"
                android:layout_below="@+id/line"
                android:layout_toEndOf="@+id/pro" />

            <com.github.pavlospt.CircleView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:id="@+id/cir3"
                app:cv_titleText=""
                app:cv_subtitleText=""
                app:cv_strokeColorValue="@color/some_accent"
                app:cv_fillColor="@color/some_red"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@+id/cir2"
                android:layout_toEndOf="@+id/cir2" />

            <com.github.pavlospt.CircleView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:id="@+id/cir4"
                app:cv_titleText=""
                app:cv_subtitleText=""
                app:cv_strokeColorValue="@color/some_accent"
                app:cv_fillColor="@color/some_teal"
                android:layout_alignTop="@+id/cir3"
                android:layout_toEndOf="@+id/cir3"
                android:layout_marginStart="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="25sp"
                android:id="@+id/day_month"
                android:layout_marginStart="15dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/pro"
                android:layout_marginTop="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunday"
                android:id="@+id/day_week"
                android:layout_below="@+id/day_month"
                android:layout_alignStart="@+id/day_month" />

            <View
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:id="@+id/line"
                android:layout_below="@+id/day_week"
                android:layout_alignStart="@+id/day_week" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>
